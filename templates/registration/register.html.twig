{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {#! DEBUTY  #}

	{#! import #}
	<section class="vh-100">
		<div class="container-fluid h-custom">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-md-9 col-lg-6 col-xl-5">
					<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="Sample image">
				</div>
				<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    {{ form_start(registrationForm) }}
                        <div class="form-outline mb-4">
                            <label class="form-label" for="inputEmail">Email</label>
                            {# <input class="form-control form-control-lg" placeholder="Veuillez saisir une addresse email valide." type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus> #}
						</div>
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn">Register</button>
                    {{ form_end(registrationForm) }}
					<form  method="post">

                        <h1 class="h3 mb-3 font-weight-normal">S'enregistrer</h1>

						<!-- Email input -->


						<!-- Password input -->
						<div class="form-outline mb-3">
                            <label class="form-label" for="inputPassword">Mot de passe</label>
                            <input class="form-control form-control-lg" placeholder="Saisir votre mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }} ">
						<div
							class="d-flex justify-content-between align-items-center">
							<!-- Checkbox -->
							<div class="form-check mb-0">
								<input class="form-check-input me-2" type="checkbox" value="" id="form2Example3"/>
								<label class="form-check-label" for="form2Example3">
									Se souvenir de moi
								</label>
							</div>
							{# <a href="#!" class="text-body">Mot de passe oubli√©</a> #}
						</div>

						<div class="text-center text-lg-start mt-4 mb-5 pt-2">
							<button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Me connecter</button>
							<p class="small fw-bold mt-2 pt-1 mb-0">Vous n'avez pas de compte ?
								<a href="#!" class="link-danger"> S'enregistrer</a>
							</p>
						</div>

					</form>
				</div>
			</div>
		</div>
	</section>




    {#! FIN #}
{% endblock %}
